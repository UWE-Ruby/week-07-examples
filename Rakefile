
desc "Run the YML example"
task :yaml do
  system "bundle exec ruby lib/configuration.rb"
end

desc "Run the XML example with happymapper"
task :xml do
  system "bundle exec ruby lib/xml.rb"
end

desc "Launch a Sinatra application that shows off Geocoder"
task :geocoder do
  system "bundle exec ruby lib/geocoder.rb"
end

desc "Saves a file to Amazon Bit Bucket"
task :amazon do
  system "bundle exec ruby lib/amazon.rb"
end

task :json do
  system "bundle exec ruby lib/json_response.rb"
end